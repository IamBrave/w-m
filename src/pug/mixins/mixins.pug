mixin contact(data)
	.contact
		p= data.title
		p= data.adress
		p= data.text

mixin benefit(data)
	li
		img(src= data.src)
		.benefit-content
			h4.benefit-title= data.title
			p.benefit-text= data.text

mixin slide_work(data)
	.slide(class= data.class)
		.slide-bg(style='')
			img(src="", alt="")
		.slide-content
			.slide-counter
				span.curent /
				span.summ
			h3.slide-title= data.title
			if data.text
				p.slide-text= data.text
			if data.btnName
				+btn({class: ''+data.btnClass+'', name: 'Оставить заявку'	})

mixin block_services(data)
	.block.block_services
		.block-bg(style='')
		.block-content
			p.block-title= data.title
			ul.block-list= data.text
				block list
			a.block-more(href='') Узнать больше


mixin sidebar-slide(data)
	.slide(class= data.class)
		.slide-bg(style='')
		.slide-content
			h2.slide-title= data.title
			p.slide-subtitle= data.subtitle
			if data.text
				p.slide-text= data.text
			if data.btnName
				+btn({href: '#', class: ''+data.btnClass+'', name: ''+data.btnName+'', src: ''+data.btnSrc+''})

mixin empl-image(data)
	.slide.slide_photo(class= data.class, style='')
		img(src="", alt="")

mixin empl-slide(data)
	.slide.slide_employee
		.slide-bg(style='')
		.slide-content
			h3.slide-title= data.name
			p.slide-text.slide-text_bold= data.position
			p.slide-subtitle= data.educationTitle
			p.slide-text= data.education
			p.slide-subtitle.slide-subtitle_email= data.email
			p.slide-subtitle.slide-subtitle_site= data.site
			+btn({class: ''+data.btnClass+'', name: 'Посмотреть проекты'})

mixin decision-slide(data)
	.slide.slide_decision
		.slide-block
			.slide-bg(style='')
			+btn({class: ''+data.btnAllClass+'', name: 'Смотреть все фото'})
		.slide-block
			.slide-content
				h3.slide-title= data.title
				block params
				p.slide-text= data.education
				block reviews
		+btn({class: ''+data.btnClass+'', name: 'Хочу такой же проект'})

mixin param(data)
	.param
		p.param-name= data.name
		p.param-value= data.value

mixin review(data)
	.review
		.review-top
			.review-photo(style='')
			p.param-name= data.param
			p.param-value= data.name
		p.review-text= data.text
		a.review-more(href='') Читать больше